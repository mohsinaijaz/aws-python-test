pipeline {
    agent { docker { image 'python:3.5.1' } }
    environment {
       PATH = "$PATH:/usr/local/bin/docker-compose"
       AWS_ACCESS_KEY_ID = credentials('	jenkins-user-aws-id')
       AWS_SECRET_ACCESS_KEY = credentials('	jenkins-user-aws-key')
   }
  stages {
        stage('Build') {
            steps {
              sh 'python --version'
            }
        }

        stage('Build AWS AMI') {
                steps {
                   sh 'python3.6 ec2.py'
                } //steps
        } // Build AWS AMI stage

        stage('Approval') {
            when {
                expression { params.Nightly != "true" }
                  }
                    steps {
                        input message: "Publish AMI"
                } // steps
        } //stage

        stage('Share AMI') {
          when {
            expression { params.Nightly != "true" }
              }
              parallel {
                stage('Share EAST') {
                    steps {
                        script {
                          echo 'share east'
                        }
                    }
                }
                stage('Share WEST') {
                    steps {
                        script {
                          echo 'share west'
                        }
                    }
                }
            }
        }

        stage('Publish AMI') {
          when {
            expression { params.Nightly != "true" }
              }
              steps {
                script {
                  echo 'publish ami'
                }
            }
        }

        stage('Publish Package List') {
          when {
            expression { params.Nightly != "true" }
              }
              steps {
                script {
                  echo 'list package'
                }
            }
        }

        stage('Unshare expired AMIs') {
          when {
            expression { params.Nightly != "true" }
              }
              parallel {
                stage('Unshare EAST') {
                    steps {
                      script {
                        echo 'unshare east'
                      }
                    }
                }
                stage('Unshare WEST') {
                    steps {
                        script {
                          echo 'unshare west'
                        }
                    }
                }
            }
        }
    }

    post {
        aborted {
            script {
                echo 'Not Done'
            }
        }
        success {
          script {
            echo 'DONE'
            }
        }
    }
}
